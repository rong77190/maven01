<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/db_jsp01</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <mapping class="com.xiechur.model.TUser"/>
        <mapping class="com.xiechur.model.TMenu"/>
        <mapping class="com.xiechur.model.TStudent"/>
        <mapping class="com.xiechur.model.TAdvisor"/>
        <mapping class="com.xiechur.model.TClassroom"/>
        <mapping class="com.xiechur.model.TCourse"/>
        <mapping class="com.xiechur.model.TDepartment"/>
        <mapping class="com.xiechur.model.TInstructor"/>
        <mapping class="com.xiechur.model.TPrereq"/>
        <mapping class="com.xiechur.model.TSection"/>
        <mapping class="com.xiechur.model.TTakes"/>
        <mapping class="com.xiechur.model.TTeaches"/>
        <mapping class="com.xiechur.model.TTimeSlot"/>
        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>